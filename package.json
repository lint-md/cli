{
  "name": "@lint-md/cli",
  "version": "0.1.3",
  "description": "Cli tool to lint your markdown file for Chinese.",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "bin": {
    "lint-md": "lib/index.js"
  },
  "scripts": {
    "test": "jest --no-cache",
    "lib:cjs": "tsc -p tsconfig.json --target ES5 --module commonjs --outDir lib",
    "lib:esm": "tsc -p tsconfig.json --target ES5 --module ESNext --outDir esm",
    "build": "run-p lib:*",
    "clean": "rimraf lib esm"
  },
  "files": [
    "esm",
    "lib",
    "src"
  ],
  "keywords": [
    "lint",
    "markdown",
    "lint-md",
    "cli"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "glob": "^7.1.3",
    "lint-md": "^0.2.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "author": "hustcc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lint-md/cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lint-md/cli.git"
  },
  "homepage": "https://github.com/lint-md/cli#readme"
}

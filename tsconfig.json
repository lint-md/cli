{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ]
}
